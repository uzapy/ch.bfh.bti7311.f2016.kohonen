<Window x:Class="Kohonen.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Kohonen.WPF"
        Title="Kohonen" Height="1031" Width="1158">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <Button x:Name="Play" Content="Play" Width="150" Click="Button_Play" />
            <Button x:Name="Step" Content="Step" Width="150" Click="Button_Step" />
        </StackPanel>
        <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="# of Runs: " Width="100" />
                <TextBlock x:Name="NumberOfRuns" Text="0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Learning Rate:"  Width="100" />
                <TextBlock x:Name="LearningRate" Text="0" />
            </StackPanel>
        </StackPanel>
        <Grid x:Name="networkGrid" Grid.Column="1" Height="1000" Width="1000" Background="AliceBlue" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</Window>
